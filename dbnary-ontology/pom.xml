<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.getalp</groupId>
    <artifactId>dbnary</artifactId>
    <version>2.3.5-SNAPSHOT</version>
  </parent>
  <groupId>org.getalp</groupId>
  <artifactId>dbnary-ontology</artifactId>

  <packaging>jar</packaging>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <log4jprops>${project.basedir}/src/main/resources/log4j.properties</log4jprops>
    <onto.source.dir>${project.basedir}/src/main/resources/org/getalp/dbnary/</onto.source.dir>
    <onto.target.dir>${project.build.directory}/generated-sources/java</onto.target.dir>
  </properties>

  <name>DBnary Ontology API</name>
  <description>DBnary API as generated from DBnary ontology using SchemaGen</description>

  <dependencies>
    <dependency>
      <groupId>org.apache.jena</groupId>
      <artifactId>jena-cmds</artifactId>
      <!-- keep in test scope so that it is not required when the module is used as a dependency-->
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.jena</groupId>
      <artifactId>apache-jena-libs</artifactId>
      <type>pom</type>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <id>dbnary</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <classpathScope>test</classpathScope>
              <executable>java</executable>
              <arguments>
                <argument>-classpath</argument>
                <classpath/>
                <argument>
                  -Dlog4j.configurationFile="${log4jprops}"
                </argument>
                <argument>jena.schemagen</argument>
                <argument>-i</argument>
                <argument>${onto.source.dir}/dbnary.ttl</argument>
                <argument>--package</argument>
                <argument>org.getalp.dbnary</argument>
                <argument>-o</argument>
                <argument>${onto.target.dir}</argument>
                <argument>--include</argument>
                <argument>http://kaiko.getalp.org/dbnary/</argument>
                <argument>-n</argument>
                <argument>DBnaryOnt</argument>
                <argument>--owl</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>lexinfo</id>
